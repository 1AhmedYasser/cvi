{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/styles/src",
  "prefix": "veera-ng",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["dist/libs/styles"],
      "options": {
        "project": "libs/styles/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/styles/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/styles/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/styles"],
      "options": {
        "jestConfig": "libs/styles/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/styles/**/*.ts", "libs/styles/**/*.html"]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular",
        "baseBranch": "master",
        "push": true,
        "noVerify": true,
        "commitMessageFormat": "chore(${projectName}): release version ${version} [skip ci]",
        "skipCommitTypes": [
          "build",
          "chore",
          "ci",
          "docs",
          "refactor",
          "revert",
          "style",
          "test",
          "format"
        ]
      }
    }
  },
  "tags": ["scope:veera-styles"]
}
