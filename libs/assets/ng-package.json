{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/libs/assets",
  "lib": {
    "entryFile": "src/index.ts"
  },
  "assets": [
    {
      "input": "./src/lib/assets/icons",
      "glob": "**/*",
      "output": "icons"
    },
    {
      "input": "./src/lib/scss",
      "glob": "**/*",
      "output": "scss"
    }
  ]
}
